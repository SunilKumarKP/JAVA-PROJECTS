package com.search;

public class BinarySearch {

    static int binarySearch(int[] array,int start,int end,int value){
        if(end>start){
            int mid = start+(end-1)/2;
            if(array[mid]==value){
                return mid;
            }
            
            if(array[mid]>value){
                return binarySearch(array, start, mid-1, value);
            }
            if(array[mid]<value){
                return binarySearch(array,mid+1,end, value);
            }
        }
        
        return -1;
    }
}
