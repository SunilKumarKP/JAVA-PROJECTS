package com.org;

public class ThreadRun {
    public static void main(String[] args) {
        Runnable r = () -> {
            for (int i = 0; i < 20; i++) {
                if (i % 2 != 0) {
                    System.out.println("value==" + i);
                }
            }
        };

        Runnable r1 = () -> {
            for (int i = 0; i < 20; i++) {
                if (i % 2 == 0) {
                    System.out.println("value==" + i);
                }
            }
        };

        Thread t1 = new Thread(r);
        Thread t2 = new Thread(r1);
        t1.start();
        t2.start();
        t2.join(t1);
    }

}
